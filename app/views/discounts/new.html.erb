<%= form_with url: merchant_discounts_path(@merchant), method: :post, local: true do |form| %>
  <%= form.label :percentage_discount, "Percent Discount" %>
  <%= form.text_field :percentage_discount %>
  <%= form.label :quantity_threshold, "Quantity Threshold" %>
  <%= form.text_field :quantity_threshold %>

  <%= form.submit "Submit" %>
<% end %>
