<%= form_with url: merchant_discount_path(@merchant, @discount), method: :patch, local: true do |form| %>
  <%= form.label :percentage_discount, "Percent Discount" %>
  <%= form.text_field :percentage_discount, value: @discount.percentage_discount %><br/>
  <%= form.label :quantity_threshold, "Quantity Threshold" %>
  <%= form.text_field :quantity_threshold, value: @discount.quantity_threshold %><br/>

  <%= form.submit "Submit" %>
<% end %>
