<%= form_with url:  "/merchant/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |form| %>
  <%= form.label "Percent Discount" %>
  <%= form.text_field "Percent Discount", value: @discount.percentage_discount %><br/>
  <%= form.label "Quantity Threshold" %>
  <%= form.text_field "Quantity Threshold", value: @discount.quantity_threshold %><br/>

  <%= form.submit "Submit" %>
<% end %>
